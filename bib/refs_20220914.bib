keywords = {Ecosystem recovery time,Ecosystem resilience,Ecosystem resistance,Ecosystem vulnerability,Functional group,Global threat analysis,Human impact assessment,Threat frequency},
number = {5},
pages = {1301--1315},
pmid = {17883495},
title = {Evaluating and ranking the vulnerability of global marine ecosystems to anthropogenic threats},
volume = {21},
year = {2007}
}
