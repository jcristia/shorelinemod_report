journal = {Marine Ecology Progress Series},
keywords = {Dispersal,F ST,F-statistics,Genetic structure,Isolation by distance,Marine connectivity,PLD,Pelagic larval duration},
pages = {291--305},
title = {Marine connectivity: A new look at pelagic larval duration and genetic metrics of dispersal},
volume = {436},
year = {2011}
}
