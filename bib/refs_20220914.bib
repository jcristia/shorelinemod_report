issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Algae,Conservation,Fishes,Invertebrates,Marine Protected Area,Marine reserves,Temperate,Tropical},
pages = {33--46},
pmid = {12210380},
title = {Biological effects within no-take marine reserves: A global synthesis},
