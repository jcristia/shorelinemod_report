journal = {Estuaries and Coasts},
keywords = {Dispersal,Propagules,Recruitment,Resilience,Seagrass,Zostera},
month = may,
number = {3},
pages = {927--940},
title = {Seagrass Viviparous Propagules as a Potential Long-Distance Dispersal Mechanism},
volume = {38},
year = {2015}
}
