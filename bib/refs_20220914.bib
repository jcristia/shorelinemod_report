keywords = {Connectivity,Edge effects,Fragmentation,Landscape ecology,Patch size,Scale,Seascape,Thresholds},
pages = {191--217},
pmid = {21215975},
title = {Seascape ecology of coastal biogenic habitats: Advances , gaps, and challenges},
volume = {427},
year = {2011}
}
