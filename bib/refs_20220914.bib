isbn = {1111111111},
issn = {19326203},
journal = {PLoS ONE},
number = {5 May},
pages = {1--21},
pmid = {33989288},
title = {Factors affecting the seasonal distribution and biomass of E. pacifica and T. spinifera along the Pacific coast of Canada: A spatiotemporal modelling approach},
