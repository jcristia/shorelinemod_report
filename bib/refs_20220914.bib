isbn = {0000000280},
issn = {16000587},
journal = {Ecography},
keywords = {ecosystem functioning,estuary,fish,functional ecology,generalist,urbanisation},
pages = {138--148},
title = {Landscape transformation alters functional diversity in coastal seascapes},
year = {2019}
}
