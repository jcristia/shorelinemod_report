keywords = {Benthic invertebrates,Echinoderm,Larval behavior,Scallop,Thermocline,Vertical distribution},
number = {1-2},
pages = {89--98},
publisher = {Elsevier B.V.},
title = {Vertical distribution of marine invertebrate larvae in response to thermal stratification in the laboratory},
