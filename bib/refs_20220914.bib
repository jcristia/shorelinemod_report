keywords = {Co-occurrence network,Conservation prioritization,Modularity,Natura 2000,Network reduction,Network topology},
number = {June 2018},
pages = {413--421},
publisher = {Elsevier},
title = {Navigating protected areas networks for improving diffusion of conservation practices},
