keywords = {critical slowdown,ecosystem functioning,emergent property,spatial self-organization},
number = {March},
pages = {2744--2753},
pmid = {22418256},
title = {Alternative mechanisms alter the emergent properties of self-organization in mussel beds},
volume = {279},
year = {2012}
}
