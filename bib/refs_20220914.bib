keywords = {british columbia,communities,dispersal,environmental filtering,hierarchical modelling of species,of the publisher,permitted without written consent,priority effects,resale or republication not,zostera marina},
pages = {91--106},
publisher = {Inter-Research Science Center},
title = {Beyond a single patch: local and regional processes explain diversity patterns in a seagrass epifaunal metacommunity},
