journal = {Global Ecology and Biogeography},
keywords = {Japanese tsunami,MaxEnt,biological invasions,introduced species,long-distance dispersal,marine debris,marine rafting,species distribution modelling},
number = {5},
pages = {588--600},
title = {Exploring potential establishment of marine rafting species after transoceanic long-distance dispersal},
volume = {28},
year = {2019}
}
