issn = {1932-6203},
journal = {PloS one},
keywords = {Aquatic Organisms,Aquatic Organisms: physiology,Atlantic Ocean,Biological,Biota,Canada,Extinction,Food Chain,Geography,Human Activities,Humans,Poaceae,Poaceae: physiology,Principal Component Analysis,Seawater,Species Specificity},
