keywords = {Mytilus edulis,biophysical model,blue mussel,cumulative impact assessment,dispersal,marine spatial planning,seascape connectivity},
number = {November},
pages = {1--11},
title = {Combining seascape connectivity with cumulative impact assessment in support of ecosystem-based marine spatial planning},
