issn = {00129658},
journal = {Ecology},
keywords = {Direct vs. indirect effects,Epiphyte,Mesograzer,Seagrass,Structural equation modeling,Top-down vs. bottom-up processes,Trophic cascade,USA,Virginia,York River,Zostera marina},
number = {2},
pages = {510--520},
pmid = {23691669},
title = {Temporal shifts in top-down vs. bottom-up control of epiphytic algae in a seagrass ecosystem},
volume = {94},
year = {2013}
}
